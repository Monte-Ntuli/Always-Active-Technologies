@page "/"
@layout EmptyLayout
@inject NavigationManager navMan;
@inherits EventsBase;

<!-- Header -->

<header class="py-3 mb-3 border-bottom">
    <div class="container-fluid d-grid gap-3 align-items-center" style="grid-template-columns: 1fr 2fr;">
        <!-- This is the Drop Down Menu -->
        <div class="dropdown">
            <a class="d-flex align-items-center col-lg-4 mb-2 mb-lg-0 link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="images/background2.jpg" alt="" width="32" height="32" class="rounded-circle shadow">
                More Insights
            </a>
            <ul class="dropdown-menu text-small shadow" style="">
                <li><a class="dropdown-item">Overview</a></li>
                <li><a class="dropdown-item">Inventory</a></li>
                <li><a class="dropdown-item">Analytics</a></li>
            </ul>
        </div>
        <!-- This is the Search Button -->
        <div class="d-flex align-items-center">
            <form class="w-100 me-3" role="search">
                <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
            </form>

            <!-- This is the Profile Button -->

            <div class="flex-shrink-0 dropdown">
                <a @onclick="login"  class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    Login &nbsp;  <img src="iCONS/person_FILL0_wght400_GRAD0_opsz48.png" alt="" width="32" height="32" class="rounded-circle">
                </a>
            </div>

        </div>
    </div>
</header>

<!-- Events -->
<h1>Available Events</h1>

<div>
    <main class="container">
        <div class="row">
            <div class="col-4">
                <div lass="col-md-5 border-right">
                    <div class="py-3">
                        @foreach (var eventItem in Events)
                        {
                            <div class="col mt-3">
                                <MudCard>
                                    <MudCardHeader>
                                        <CardHeaderContent>
                                            <MudText Typo="Typo.h6">@eventItem.Name</MudText>
                                        </CardHeaderContent>
                                    </MudCardHeader>
                                    <MudCardMedia Image="images/background2.jpg" Height="200" />
                                    <MudCardContent>
                                        <MudText>@eventItem.Description</MudText>
                                        <MudText Typo="Typo.body2">Booked seats @eventItem.Seats</MudText>
                                        <MudText Typo="Typo.body2">Available seats </MudText>
                                    </MudCardContent>
                                    <MudCardActions>
                                        <MudButton Variant="Variant.Text" Color="Color.Primary">Book Ticket</MudButton>
                                    </MudCardActions>
                                </MudCard>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@code {

    void login()
    {
        navMan.NavigateTo("Login");
    }

}

