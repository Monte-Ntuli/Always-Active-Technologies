@page "/ForgotPasswordEmail"
@layout EmptyLayout
@inject NavigationManager navMan;
@inherits AccountBase;
@using MudBlazor

<MudCard Class="align-content-center; container-sm">
    <img class="mb-4" src="images/background2.jpg" alt="" width="200" height="200">
    <MudForm>

        <a href="/Login" class="nav-link text-black link-dark">
            <img src="iCONS/arrow_back_FILL0_wght400_GRAD0_opsz48.png" class="rounded-circle">
        </a>
        <h1 class="h3 mb-3 fw-normal">Please Enter Your Email</h1>

        <MudItem Class="form-floating">
            <MudTextField Label="Email Address" Class="form-control" Variant="Variant.Outlined"
            @bind-Value="email" Placeholder="name@example.com" />
        </MudItem>
        &nbsp;
        &nbsp;
        <MudItem Class="form-floating; margin-top: 2px">
            <br />
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" @onclick="FindEmail">Register</MudButton>
        </MudItem>
        <br />
    </MudForm>
</MudCard>

